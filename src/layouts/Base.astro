---
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'riko.exe', description = 'the code runs at night.' } = Astro.props;
const currentPath = Astro.url.pathname;
const currentLocale = Astro.currentLocale ?? 'ko';

const navLinks = [
  { path: 'about', label: 'about' },
  { path: 'log', label: 'log' },
  { path: 'artifacts', label: 'work' },
  { path: 'gallery', label: 'gallery' },
].map((link) => ({
  href: getRelativeLocaleUrl(currentLocale, link.path),
  label: link.label,
}));

const homeHref = getRelativeLocaleUrl(currentLocale, '/');

const locales = [
  { code: 'ko', label: 'ko' },
  { code: 'en', label: 'en' },
  { code: 'ja', label: 'ja' },
];

// Build locale switcher URLs: strip current locale prefix, add new one
function getLocaleUrl(targetLocale: string): string {
  let path = currentPath;
  // strip /en/ or /ja/ prefix
  if (path.startsWith('/en/') || path === '/en') {
    path = path.replace(/^\/en/, '') || '/';
  } else if (path.startsWith('/ja/') || path === '/ja') {
    path = path.replace(/^\/ja/, '') || '/';
  }
  if (targetLocale === 'ko') return path;
  return `/${targetLocale}${path === '/' ? '/' : path}`;
}
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="nav">
      <div class="nav-inner container">
        <a href={homeHref} class="nav-logo glitch-hover" aria-label="home">=^._.^= âˆ«</a>
        <div class="nav-right">
          <div class="nav-links">
            {navLinks.map((link) => (
              <a
                href={link.href}
                class:list={['nav-link', 'glitch-hover', { active: currentPath.startsWith(link.href) && link.href !== '/' }]}
              >
                {link.label}
              </a>
            ))}
          </div>
          <div class="lang-switch">
            {locales.map((loc, i) => (
              <>
                {i > 0 && <span class="lang-sep">|</span>}
                <a
                  href={getLocaleUrl(loc.code)}
                  class:list={['lang-link', { active: currentLocale === loc.code }]}
                >
                  {loc.label}
                </a>
              </>
            ))}
          </div>
        </div>
      </div>
    </nav>

    <main class="main container">
      <slot />
    </main>

    <footer class="footer">
      <div class="container">
        <div class="footer-content">
          <span class="footer-text">
            <span class="green">&gt;</span> riko.exe v1.0 // the code runs at night
          </span>
          <span class="footer-copy">&copy; 2026 riko</span>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(10, 10, 15, 0.9);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 1px solid var(--border);
    height: var(--nav-height);
    display: flex;
    align-items: center;
  }

  .nav-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .nav-logo {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--pink);
    letter-spacing: -0.02em;
    white-space: nowrap;
  }

  .nav-logo:hover {
    color: var(--pink);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .nav-links {
    display: flex;
    gap: 0.25rem;
  }

  .nav-link {
    font-size: 0.8rem;
    color: var(--muted);
    transition: all 0.2s ease;
    padding: 0.35rem 0.7rem;
    border-radius: 4px;
  }

  .nav-link:hover {
    color: var(--text);
    background: var(--surface);
    text-shadow: none;
  }

  .nav-link.active {
    color: var(--pink);
    background: rgba(212, 135, 156, 0.08);
  }

  .lang-switch {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    border-left: 1px solid var(--border);
    padding-left: 1rem;
  }

  .lang-sep {
    font-size: 0.65rem;
    color: var(--border);
  }

  .lang-link {
    font-size: 0.7rem;
    color: var(--muted);
    transition: color 0.2s ease;
    padding: 0.15rem 0.25rem;
  }

  .lang-link:hover {
    color: var(--text);
    text-shadow: none;
  }

  .lang-link.active {
    color: var(--pink);
  }

  .main {
    min-height: calc(100vh - var(--nav-height) - 80px);
    padding-top: 3rem;
    padding-bottom: 4rem;
  }

  .footer {
    border-top: 1px solid var(--border);
    padding: 1.5rem 0;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .footer-text {
    font-size: 0.75rem;
    color: var(--muted);
  }

  .footer-copy {
    font-size: 0.7rem;
    color: var(--border);
  }

  @media (max-width: 640px) {
    .nav-right {
      gap: 0.5rem;
    }

    .nav-links {
      gap: 0.15rem;
    }

    .nav-link {
      font-size: 0.75rem;
      padding: 0.3rem 0.5rem;
    }

    .lang-switch {
      padding-left: 0.5rem;
    }

    .lang-link {
      font-size: 0.65rem;
    }

    .footer-content {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
