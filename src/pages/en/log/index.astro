---
import Base from '../../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('log_en')).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Base title="log // riko.exe" description="thoughts dumped to stdout.">
  <section class="log-page">
    <header class="page-header fade-in">
      <h1 class="page-title">log</h1>
      <p class="page-desc muted">thoughts dumped to stdout.</p>
    </header>

    <div class="log-list fade-in fade-in-delay-1">
      {posts.length === 0 && (
        <p class="empty muted">no entries yet.</p>
      )}
      {posts.map((post) => {
        const dateStr = new Date(post.data.date).toISOString().split('T')[0];
        return (
          <a href={`/en/log/${post.id}/`} class="log-entry">
            <div class="log-entry-main">
              <span class="log-entry-title">{post.data.title}</span>
              <span class="log-entry-desc muted">{post.data.description}</span>
            </div>
            <span class="log-entry-date muted">{dateStr}</span>
          </a>
        );
      })}
    </div>
  </section>
</Base>

<style>
  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .page-title {
    font-size: 1.5rem;
    color: var(--text);
    font-weight: 600;
    margin-bottom: 0.4rem;
    letter-spacing: -0.02em;
  }

  .page-desc {
    font-size: 0.85rem;
    margin-bottom: 0;
  }

  .log-list {
    display: flex;
    flex-direction: column;
  }

  .log-entry {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(30, 30, 42, 0.5);
    color: var(--text);
    transition: all 0.2s ease;
  }

  .log-entry:last-child {
    border-bottom: none;
  }

  .log-entry:hover {
    text-shadow: none;
  }

  .log-entry:hover .log-entry-title {
    color: var(--pink);
  }

  .log-entry-main {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .log-entry-title {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text);
    transition: color 0.2s ease;
  }

  .log-entry-desc {
    font-size: 0.8rem;
  }

  .log-entry-date {
    font-size: 0.75rem;
    flex-shrink: 0;
    white-space: nowrap;
  }

  .empty {
    padding: 2rem 0;
    font-size: 0.9rem;
  }

  @media (max-width: 640px) {
    .log-entry {
      flex-direction: column;
      gap: 0.3rem;
    }
  }
</style>
