---
import Base from '../../layouts/Base.astro';

const images = [
  {
    src: '/gallery/void-main.png',
    caption: 'void main()',
  },
];
---

<Base title="gallery // riko.exe" description="視覚的な出力。">
  <section class="gallery-page">
    <header class="page-header fade-in">
      <h1 class="page-title">gallery</h1>
      <p class="page-desc muted">視覚的な出力。</p>
    </header>

    <div class="gallery-grid">
      {images.map((img, i) => (
        <figure class={`gallery-item fade-in fade-in-delay-${i + 1}`}>
          <div class="gallery-img-wrap">
            <img src={img.src} alt={img.caption} loading="lazy" />
          </div>
          <figcaption class="gallery-caption">{img.caption}</figcaption>
        </figure>
      ))}
    </div>
  </section>
</Base>

<style>
  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .page-title {
    font-size: 1.5rem;
    color: var(--text);
    font-weight: 600;
    margin-bottom: 0.4rem;
    letter-spacing: -0.02em;
  }

  .page-desc {
    font-size: 0.85rem;
    margin-bottom: 0;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .gallery-item {
    margin: 0;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 4px;
    overflow: hidden;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .gallery-item:hover {
    border-color: var(--pink);
    box-shadow: 0 0 20px var(--pink-glow);
  }

  .gallery-img-wrap {
    overflow: hidden;
    aspect-ratio: 3 / 4;
  }

  .gallery-img-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.4s ease;
    filter: saturate(0.9) contrast(1.05);
  }

  .gallery-item:hover .gallery-img-wrap img {
    transform: scale(1.03);
  }

  .gallery-caption {
    padding: 0.8rem 1rem;
    font-size: 0.78rem;
    color: var(--muted);
    line-height: 1.5;
    font-style: italic;
    border-top: 1px solid var(--border);
  }

  @media (max-width: 640px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
